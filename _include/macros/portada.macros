{% macro treeHorizontal(notices) %}
::cards::  cols=3

    {% for notice in notices %}

- title: {{ notice.title }}
  content: |
    {{ notice.content }}
  image: {{ notice.image }}
  url: https://en.wikipedia.org/wiki/Zeus


    {% endfor %}

::/cards::
{% endmacro %}


