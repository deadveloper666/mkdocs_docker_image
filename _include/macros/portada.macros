{% macro createCabecera(noticia) %}

::cards::  cols=1 image-bg

- title: {{ noticia.title }}
  content: |
    {{ noticia.content }}
  url: https://en.wikipedia.org/wiki/Zeus
  image: {{noticia.image}}

::/cards::
{% endmacro %}



